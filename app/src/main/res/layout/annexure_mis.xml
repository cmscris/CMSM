<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_1"
    android:paddingLeft="@dimen/padding_1"
    android:paddingRight="@dimen/padding_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="Railway"
                android:textStyle="bold"
                android:textColor="@color/colorDarkBlack"
                android:textSize="@dimen/text_8" />

        </LinearLayout>


        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/colorDarkBlack" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_total_consump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:textStyle="bold"
                android:text="Energy consumed in million uints kWh"
                android:textColor="@color/colorDarkBlack"
                android:textSize="@dimen/text_8" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/colorDarkBlack" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bill_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:textStyle="bold"
                android:text="Bill paid in million Rs."
                android:textColor="@color/colorDarkBlack"
                android:textSize="@dimen/text_8" />

        </LinearLayout>


        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/colorDarkBlack" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_avg_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:textStyle="bold"
                android:text="Average cost of energy in Rs/kWh"
                android:textColor="@color/colorDarkBlack"
                android:textSize="@dimen/text_8" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/colorDarkBlack" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:textStyle="bold"
                android:text="Percentage of total surcharge to total bill paid."
                android:textColor="@color/colorDarkBlack"
                android:textSize="@dimen/text_8" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
