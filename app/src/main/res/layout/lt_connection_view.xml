<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_header_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLine"
                android:padding="@dimen/padding_5"
                android:text="NR - JAN/2016"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/drop_shadow"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_railway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_railway"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/railway"
                        android:inputType="text"
                        android:padding="@dimen/padding_10"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_division"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_division"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/division"
                        android:inputType="text"
                        android:padding="@dimen/padding_10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_sse_incharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_sse_inchagre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/sse_incharge"
                        android:inputType="text"
                        android:padding="@dimen/padding_10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_supc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_supc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/supc"
                        android:inputType="text"
                        android:padding="@dimen/padding_10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_no_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_no_connection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/no_of_connection"
                        android:inputType="text"
                        android:padding="@dimen/padding_10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_connected_load"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_connected_load"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/total_connected_load"
                        android:inputType="text"
                        android:padding="@dimen/padding_10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_energy_consumed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_energy_consumed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/total_consumed_energy"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/padding_10"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_total_ebpd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_total_ebpd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/total_ebp"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/padding_10"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_avg_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_avg_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/avg_cost_energy"
                        android:inputType="text"
                        android:padding="@dimen/padding_10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10">

                    <EditText
                        android:id="@+id/et_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:hint="@string/remarks"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:padding="@dimen/padding_10"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlueText"
                        android:textSize="@dimen/text_14" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/colorButton"
                    android:text="@string/submit"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_1" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>