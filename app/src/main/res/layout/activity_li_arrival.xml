<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/tv_copyright"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCyan"
        android:orientation="vertical">


        <include layout="@layout/actionbar_layout" />

        <TextView
            android:id="@+id/tv_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/text_16"
            android:text="LI Arrival"
            android:textSize="20dp"
            android:textColor="@color/colorBlueText" />


        <!-- GPS COORDINATES -->
        <TextView
            android:id="@+id/tv_cord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nearest Station"
            android:inputType="text"
            android:padding="@dimen/padding_10"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundshapegreen"
            android:layout_column="2"/>







        <!-- REFERENCE NO -->
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:stretchColumns="1"
            >

            <!-- REFERENCE NO -->
            <TableRow
                android:layout_width="match_parent">

                <TextView
                    android:text="Ref No :"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/tv_ref_no"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/roundshapegrey"
                    android:layout_weight="3"
                    android:layout_column="2"/>

            </TableRow>



            <!-- NEAREST STATION -->
            <TableRow
                android:layout_width="match_parent">

                <TextView
                    android:text="Nearest Station"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />

                <!-- NEAREST STATION -->
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spn_nearest_station"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />

            </TableRow>









            <!-- Break-->
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="text"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/text_14"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorCyan" />






            <!-- FROM DATE / TIME -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="Frm Dt/Time"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />


                <TextView
                    android:id="@+id/tv_frm_date"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/roundshapegrey"
                    android:layout_weight="3"
                    android:layout_column="2"/>
            </TableRow>

            <!-- TO DATE / TIME -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="To Dt/Time"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />


                <TextView
                    android:id="@+id/tv_to_date"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/roundshape"
                    android:layout_weight="3"
                    android:layout_column="2"/>

            </TableRow>








            <!-- Break-->
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="text"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/text_14"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorCyan" />






            <!-- FROM STATION -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="From Station"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/tv_frm_sttn"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/roundshapegrey"
                    android:layout_weight="3"
                    android:layout_column="2"/>
            </TableRow>







            <!-- TO STATION -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="To Station"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />



                <!-- TO STATION -->
                <EditText
                    android:id="@+id/et_to_sttn"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_14"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />
            </TableRow>


            <!-- VIA 1 -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="Via 1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />

                <EditText
                    android:id="@+id/et_via1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_14"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />


            </TableRow>



            <!-- VIA 2 -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="Via 2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />

                <EditText
                    android:id="@+id/et_via2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_14"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />

            </TableRow>






            <!-- Break-->
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="text"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/text_14"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorCyan" />






            <!-- DUTY TYPE -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="Duty Type"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spn_dutytype"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />

            </TableRow>


            <!-- OTHER DUTY TYPE -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="Oth Duty"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spn_other_dutytype"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />

            </TableRow>


            <!-- SERVICE TYPE  -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="Service Type"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />



                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spn_serviceTyp"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />

            </TableRow>








            <!-- Break-->
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="text"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/text_14"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorCyan" />






            <!-- LOCO NO -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="Loco No"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />

                <EditText
                    android:id="@+id/et_loco_no"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_14"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />


            </TableRow>



            <!-- TRAIN NO -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="Train No"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />

                <EditText
                    android:id="@+id/et_train_no"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_14"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />


            </TableRow>



            <!-- KMS -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="KMS"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />



                <EditText
                    android:id="@+id/et_kms"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_14"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />


            </TableRow>





            <!-- Remarks  -->
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:text="Remarks"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_column="1" />


                <EditText
                    android:id="@+id/et_remarks"
                    android:layout_width="0dip"
                    android:layout_height="150dp"
                    android:hint="REMARKS"
                    android:inputType="text|textMultiLine"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_14"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/roundshape" />




            </TableRow>




    </TableLayout>


        <Button
            android:id="@+id/btn_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/colorButton"
            android:text="@string/save"
            android:textColor="@color/colorWhite" />


    </LinearLayout>

</ScrollView>
