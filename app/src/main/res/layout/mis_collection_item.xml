<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBackground"
    android:orientation="vertical"
    android:padding="@dimen/padding_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drop_shadow"
        android:minHeight="@dimen/padding_50"
        android:padding="@dimen/padding_5">


        <ImageView
            android:id="@+id/iv_listarrow"
            android:layout_width="@dimen/zoom_size"
            android:layout_height="@dimen/zoom_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_listarrow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_annexure_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:textColor="@color/colorBlueText"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/tv_annexure_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:textColor="@color/colorBlueText"
                android:textSize="@dimen/text_14" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>