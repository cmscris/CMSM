<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/colorBlueGrey"
    app:cardPreventCornerOverlap="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/SN"
        android:text="SN"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:layout_marginStart="0dp"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/Crewid"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/SN"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="24dp"
        android:layout_toEndOf="@+id/SN"
        android:layout_toRightOf="@+id/SN"
        android:gravity="center_vertical"
        android:text="crewid"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />
    <TextView
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:id="@+id/Abnrno"
        android:text="ABnr no."
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/Crewid" />

</RelativeLayout>
</android.support.v7.widget.CardView>

