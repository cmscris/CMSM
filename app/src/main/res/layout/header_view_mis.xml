<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_1"
    android:paddingLeft="@dimen/padding_1"
    android:paddingRight="@dimen/padding_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:weightSum="10">


        <TextView
            android:id="@+id/tv_div_rly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:textColor="@color/colorDarkBlack"
            android:textSize="@dimen/text_8" />


        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/colorDarkBlack" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_total_consump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="Total energy consumed in million kWh"
                android:textColor="@color/colorDarkBlack"
                android:textSize="@dimen/text_8"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/colorDarkBlack" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bill_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="Total energy bill paid in million Rs."
                android:textColor="@color/colorDarkBlack"
                android:textSize="@dimen/text_8"
                android:textStyle="bold" />

        </LinearLayout>


        <View
            android:layout_width="@dimen/padding_1"
            android:layout_height="match_parent"
            android:background="@color/colorDarkBlack" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_avg_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="Average cost of energy in Rs/kWh"
                android:textColor="@color/colorDarkBlack"
                android:textSize="@dimen/text_8"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
