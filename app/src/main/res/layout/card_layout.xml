<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_5">

    <LinearLayout
        android:id="@+id/linear_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCardRed"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_25">

        <ImageView
            android:id="@+id/img_card"
            android:layout_width="@dimen/icon_60"
            android:layout_height="@dimen/icon_60"
            android:scaleType="fitXY"
            android:src="@drawable/eems_white" />

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:text="@string/cms"
            android:minLines="3"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_14" />

    </LinearLayout>


</LinearLayout>