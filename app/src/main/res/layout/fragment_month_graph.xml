<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/drop_shadow"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:textColor="@color/colorLine"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/iv_zoom1"
                    android:layout_width="@dimen/zoom_size"
                    android:layout_height="@dimen/zoom_size"
                    android:layout_gravity="right|top"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_zoom" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.cris.cmsm.widget.VerticalTextView
                    android:id="@+id/tv_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:textColor="@color/colorLine"
                    android:textSize="@dimen/text_10" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/drop_shadow"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_seb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:textColor="@color/colorLine"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/iv_zoom2"
                    android:layout_width="@dimen/zoom_size"
                    android:layout_height="@dimen/zoom_size"
                    android:layout_gravity="right|top"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_zoom" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.cris.cmsm.widget.VerticalTextView
                    android:id="@+id/tv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:textColor="@color/colorLine"
                    android:textSize="@dimen/text_10" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>

