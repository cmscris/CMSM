<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">
    <include layout="@layout/actionbar_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/copy_right"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_10" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_copyright"
            android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_railway2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_image" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="Abnormality User"
            android:textAlignment="gravity"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_20" />
        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userid"
        android:layout_marginTop="10dp"
        android:theme="@style/TextLabel">
        <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/et_userid"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="5dp"
             android:layout_marginRight="5dp"
             android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="Enter Login ID"
            android:textColor="@color/colorWhite"
            android:cursorVisible="true"/>
    </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tl_current_password"
            android:layout_marginTop="10dp"
            android:theme="@style/TextLabel">
        <EditText
            android:id="@+id/current_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:cursorVisible="true"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:hint="Enter Current Password"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="5dp"/>
        </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tl_new_password"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter New Password"
        android:layout_marginTop="10dp"
        android:id="@+id/new_password"
        android:gravity="bottom"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"
        android:cursorVisible="true"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />
            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tl_confirm_password"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Confirm Password"
        android:layout_marginTop="10dp"
        android:id="@+id/confirm_password"
        android:textColor="@color/colorWhite"
        android:gravity="bottom"
        android:layout_marginRight="5dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:cursorVisible="true"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/save_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorButton"
        android:layout_marginTop="10dp"
        android:text="Save Password"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorWhite" />
        </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </RelativeLayout>



</LinearLayout>

